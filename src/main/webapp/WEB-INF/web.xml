<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MessagePasser</servlet-name>
        <servlet-class>MessagePasser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessagePasser</servlet-name>
        <url-pattern>/MessagePasser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsernameSetter</servlet-name>
        <servlet-class>UsernameSetter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsernameSetter</servlet-name>
        <url-pattern>/UsernameSetter</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Searcher</servlet-name>
        <servlet-class>Searcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageDeleter</servlet-name>
        <servlet-class>MessageDeleter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessageDeleter</servlet-name>
        <url-pattern>/MessageDeleter</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MessageEditor</servlet-name>
        <servlet-class>MessageEditor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessageEditor</servlet-name>
        <url-pattern>/MessageEditor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Searcher</servlet-name>
        <url-pattern>/Searcher</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>



</web-app>